@model IEnumerable<IsTakip.Core.Classes.KalinlikClasses.Kalinlik>

<div class="row">
  <div class="col-xxl-12">
    <div class="card card-xxl-stretch mb-5 mb-xl-8">
      <div class="card-header border-0 pt-5">
        <div class="card-toolbar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover">
<a asp-action="Create" class="btn btn-light-primary">
          <i class="fa fa-plus">Yeni Malzeme Kalınlık</i>
        </a>
        </div>
      </div>
      <div class="card-body py-3">
        @*Datatables.net kütüphanesinin table özelliğini table etiketine atamak için class a "dt-init" özelliği atanmalı -> Eğer dt-init yazarsanız section kısmında InitDataTables metodunu çağırmalısınız.*@
        <table class="table table-striped table-row-bordered gy-5 gs-7 dt-init" id="tablo">
          <thead>
            <tr class="fw-bolder fs-6 text-gray-700">
              <th>İşlemler</th>
              <th>
                @Html.DisplayNameFor(model=>model.IsAktifString)
              </th>
              <th>
                @Html.DisplayNameFor(model=>model.Tanim)
              </th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model)
            {
              <tr>
                <td>
                  <a asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" title="Düzenle">
                    <i class="fas fa-pencil-alt text-success" style="font-size:1.5rem"></i>
                  </a>
                  <a asp-action="Detail" asp-route-id="@item.Id" data-toggle="tooltip" title="Detay">
                    <i class="fas fa-file-alt text-info ml-2" style="font-size:1.5rem"></i>
                  </a>
                  <a asp-action="Delete" asp-route-id="@item.Id" data-toggle="tooltip" title="Sil">
                    <i class="fas fa-trash-alt text-danger ml-2" style="font-size:1.5rem"></i>
                  </a>
                </td>
                <td>
                  @Html.DisplayFor(modelItem=>item.IsAktifString)
                </td>
                <td>
                  @Html.DisplayFor(modelItem=>item.Tanim)
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

@section Scripts
  {
  <script>
    //Sayfa yüklenmesi bittikten sonra datatables.net css lerini yada js lerini çağırıyoruz.
    $('document').ready(function() {
        InitDataTables();
        // $('#tablo').DataTable();
    });
  </script>
  }